	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/2036 > /bin/2036
	chmod +x /bin/2036
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/2041 > /bin/2041
	chmod +x /bin/2041
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/2042 > /bin/2042
