#!/bin/bash
cd

if [ $(id -u) -eq 0 ]
then
        clear
else
        if echo $(id) |grep sudo > /dev/null
        then
        clear
        echo "Voce não é root"
        echo "Seu usuario esta no grupo sudo"
        echo -e "Para virar root e fazer a instalação execute \033[1;31msudo su\033[0m"
        exit
        else
        clear
        echo -e "Você pecisa esta como root para poder fazer a instalção, Para virar root execute \033[1;31msu\033[0m e digite sua senha root"
        exit
        fi
fi

if [ -f /bin/adm ]
  then
  	echo -e "\033[1;31mErro! \033[1;36mAdmScript já está instalado, será necessário a desinstalação da versão atual para a instalar novamente.\033[0m"
  true
  else
   echo -e "\033[1;36mAdmScript, script que tem o objetivo de lhe ajudar, sem a necessidade de guardar scripts ou comandos.\033[0m"
   echo " "
   tput setaf 1 ; tput bold ; read -n 1 -s -p "Pressione qualquer tecla para continuar..." ; echo "" ; echo "" ; tput sgr0
	echo
	echo -e "\033[1;35mBaixando arquivos necessários.\033[0m"
	sleep 9
	echo
	echo -e "\033[1;32mDando permissões.\033[0m"
	sleep 5
	echo
	echo -e "\033[1;37mCuidando de algumas coisas. Quase lá!\033[0m"
	sleep 8
   wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/adm > /bin/adm
	chmod +x /bin/adm
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/1 > /bin/1
	chmod +x /bin/1
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/2 > /bin/2
	chmod +x /bin/2
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/3 > /bin/3
	chmod +x /bin/3
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/4 > /bin/4
	chmod +x /bin/4
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/14 > /bin/14
	chmod +x /bin/5
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/14 > /bin/14
	chmod +x /bin/14
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/101 > /bin/101
	chmod +x /bin/101
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/102 > /bin/102
	chmod +x /bin/102
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/104 > /bin/104
	chmod +x /bin/104
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/201 > /bin/201
	chmod +x /bin/201
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/202 > /bin/202
	chmod +x /bin/202
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/203 > /bin/203
	chmod +x /bin/203
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/204 > /bin/204
	chmod +x /bin/204
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/206 > /bin/206
	chmod +x /bin/206
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/207 > /bin/207
	chmod +x /bin/207
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/207.py > /bin/207.py
	chmod +x /bin/207.py
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/208 > /bin/208
	chmod +x /bin/208
	wget -o /dev/null -O- https://raw.githubusercontent.com/Devimla/AdmScript/master/209 > /bin/209
	chmod +x /bin/209
